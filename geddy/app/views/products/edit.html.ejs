<div class="jumbotron">
  <form id="product-form" class="form-horizontal" action="/products/<%= params.id %>?_method=PUT" method="POST">
    <fieldset>
      <legend>Update this Product</legend>
      <% if(params.errors) { %>
      <div class="form-group">
        <ul>
        <% for(var err in params.errors) { %>
          <li><%= params.errors[err]; %></li>
        <% } %>
        </ul>
      </div>
      <% } %>

      <%- partial('form', {product: product}) %>

      <div class="form-actions col-xs-offset-2 col-xs-offset-2">
        <%- contentTag('input', 'Save', {type: 'submit', class: 'btn btn-primary'}) %>
        <%- contentTag('button', 'Remove', {type: 'submit', formaction: '/products/' + params.id + '?_method=DELETE', formmethod: 'POST', class: 'btn btn-danger'}) %>
      </div>
    </fieldset>
  </form>
</div>
